@model Bocasay.Web.Models.User.CreatePostRequest

@{
    ViewData["Title"] = "Create User";
}

<form method="post">
    @Html.AntiForgeryToken()
    <h2>Create Your Full Name</h2>
    @{
        var msg = TempData["Msg"] as string;
        if (!string.IsNullOrEmpty(msg))
        {
            <div class="alert alert-success">
                <strong>@msg</strong>
            </div>
        }
    }
    <div class="form-group row">
        <div class="col-12 col-lg-6">
            <label asp-for="User.FirstName" class="form-label"></label>
            <input type="text" asp-for="User.FirstName" class="form-control" />
            <span class="text-danger" asp-validation-for="User.FirstName"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12 col-lg-6">
            <label asp-for="User.LastName" class="form-label"></label>
            <input type="text" asp-for="User.LastName" class="form-control" />
            <span class="text-danger" asp-validation-for="User.LastName"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12 col-lg-6">
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-info mx-2">
                    <i class="fal fa-edit"></i> Create
                </button>
            </div>
        </div>
    </div>
</form>
